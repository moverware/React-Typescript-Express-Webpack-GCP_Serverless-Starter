{
    "name": "Typescript-Express-GCP_Serverless-Starter",
    "functionVars": {
        "localFunc": "serveReactHTTP"
    },
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "cross-env-shell PROD=false npm-run-all build localFunc",
        "test": "npm-run-all lint:test clean build:test start:test",
        "localFunc": "cd ./dist && functions-framework --target=$npm_package_functionVars_localFunc",
        "build": "npm-run-all lint:functions clean build:functions build:serveReactFrontend move:packagejson move:packagelockjson",
        "test:system": "npm-run-all lint:test:system clean build:test:system start:test:system",
        "HELPERS": "______________________________________________________________",
        "move:packagejson": "cp ./package.json ./dist",
        "move:packagelockjson": "cp ./package-lock.json ./dist",
        "build:functions": "tsc -p ./tsconfig.functions.json",
        "lint:functions": "tslint --project ./tsconfig.functions.json --config ./tslint.json",
        "build:serveReactFrontend": "webpack --config ./dist/functions/serveReactHTTP/webpack.config.js",
        "lint:test": "tslint --project ./tsconfig.test.json",
        "lint:test:system": "tslint --project ./tsconfig.system.test.json",
        "build:test": "tsc -p ./tsconfig.test.json",
        "build:test:system": "tsc -p ./tsconfig.system.test.json",
        "start:test": "mocha \"dist/**/tests/*.test.js\" --timeout 4000 --exit",
        "start:test:system": "mocha \"dist/**/tests/*.system.test.js\" --timeout 4000 --exit",
        "clean": "rimraf ./dist",
        "DEPLOYING": "____________________________________________________________",
        "deploy_all": "npm-run-all --parallel deploy_helloWorldHTTP deploy_ServeReactHTTP --serial test:system",
        "deploy_helloWorldHTTP": "npm-run-all build deploy_helloWorldHTTPMain",
        "deploy_helloWorldHTTPMain": "gcloud functions deploy helloWorldHTTP --source ./dist --runtime nodejs10 --trigger-http",
        "deploy_serveReactHTTP": "npm-run-all build deploy_serveReactHTTPMain",
        "deploy_serveReactHTTPMain": "gcloud functions deploy serveReactHTTP --source ./dist --runtime nodejs10 --trigger-http"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/react-dom": "^16.9.8",
        "body-parser": "^1.19.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.3",
        "html-webpack-plugin": "^4.3.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "typescript": "^3.9.7",
        "webpack": "^4.43.0",
        "webpack-dev-middleware": "^3.7.2",
        "webpack-hot-middleware": "^2.25.0"
    },
    "devDependencies": {
        "@google-cloud/functions-framework": "^1.6.0",
        "@types/assert": "^1.5.1",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.7",
        "@types/html-webpack-plugin": "^3.2.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.24",
        "@types/react": "^16.9.43",
        "@types/sinon": "^9.0.4",
        "@types/sinon-express-mock": "^1.3.8",
        "@types/supertest": "^2.0.10",
        "@types/webpack": "^4.41.21",
        "@types/webpack-dev-middleware": "^3.7.1",
        "@types/webpack-hot-middleware": "^2.25.3",
        "assert": "^2.0.0",
        "awesome-typescript-loader": "^5.2.1",
        "cross-env": "^7.0.2",
        "mocha": "^8.0.1",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "sinon": "^9.0.2",
        "sinon-express-mock": "^2.2.1",
        "source-map-loader": "^1.0.1",
        "supertest": "^4.0.2",
        "tslint": "^6.1.2",
        "tslint-config-prettier": "^1.18.0",
        "tslint-react": "^5.0.0",
        "webpack-cli": "^3.3.12"
    }
}
